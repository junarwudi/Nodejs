html
  width 100%
  height 100%
  font-family Helvetica
  font-size 16px
  -webkit-text-size-adjust 100%

body
  position relative
  width 100%
  min-height 100%
  margin 0
  line-height 1
  font-size 0.875rem
  color #666
  -webkit-tap-highlight-color transparent
  tap-highlight-color transparent
  -webkit-user-select none
  user-select none
  -webkit-touch-callout none
  touch-callout none

a
  text-decoration none
  font inherit
  color inherit
  outline 0

ul,ol
  list-style none

h1,h2,h3,h4,h5,h6,p,ul,ol,dl,dt,dd,li
  margin 0
  padding 0
  font-weight normal

.clearfix after
  content ''
  display block
  clear both

.hide
  display none

.flex-box
  display -webkit-box
  display box
  display -webkit-flex
  display flex
  align-items flex-end

.flex-box-1
  display -webkit-box
  display box
  display -webkit-flex
  display flex

.flex
  -webkit-box-flex 1
  box-flex 1
  -webkit-flex 1
  flex 1

.page{
  overflow hidden
  height auto
}

.top
  background  #666
  width 100%
  height 2.6rem
  text-align center
  line-height 2.6rem
  font-size 1rem
  span
    color #fff
.ui-bar-f
  color #666
  background-color #666
  text-shadow none

.main
  width 100%

.foot
  width 100%
  margin 0 auto
  background #eee
  img
    width 2.5rem
    height 2.5625rem
    margin-top 0.3rem
    padding 0 0.2rem


.cont
  width 98%
  margin 0 auto
  position relative
  span
    width 2.8rem
    height 2.0rem
    text-align center
    border-radius 4px
    background #3388cc
    color #fff
    margin-right 0.1rem
    text-shadow none
    font-size 0.9rem
    line-height 2rem
    margin-bottom 0.4rem

.edit
  width 100%
  overflow hidden
  height auto
  margin 0 0.5rem
  border-bottom 1px solid #ccc
  color #666
  margin-bottom 0.5rem

#textEdit
  width 100%
  outline none
  min-height 1.4rem
  font-size 0.85rem













